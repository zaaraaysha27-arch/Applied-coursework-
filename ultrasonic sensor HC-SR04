// HC-SR04 Ultrasonic Sensor Distance Measurement
// Used for obstacle detection and motion control

#define TRIG 2
#define ECHO 3
#define STOP_DISTANCE 15   // centimetres

void setup() {
  pinMode(TRIG, OUTPUT);
  pinMode(ECHO, INPUT);
}

// Returns distance in centimetres
float getDistance() {
  digitalWrite(TRIG, LOW);
  delayMicroseconds(2);

  digitalWrite(TRIG, HIGH);
  delayMicroseconds(10);
  digitalWrite(TRIG, LOW);

  long duration = pulseIn(ECHO, HIGH);
  float distance = duration * 0.034 / 2;

  return distance;
}

void loop() {
  float distance = getDistance();

  if (distance > STOP_DISTANCE) {
    moveForward();
  } else {
    stopMotors();
  }
}

// Placeholder motor functions
void moveForward() {
  // Motor forward logic
}

void stopMotors() {
  // Motor stop logic
}
